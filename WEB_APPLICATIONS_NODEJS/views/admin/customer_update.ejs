<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    <%- include("../partials/nav2")  %> 
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <form method="POST">
                    <input type="hidden" name="customerid" value="<%= Customer.dataValues.customer_ID %> ">
                    <div class="row mb-3">
                        <label for="customer_ID" class="col-sm-2 col-form-label">Customer ID:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="customer_ID" name="customer_ID" value="<%= Customer.dataValues.customer_ID %> ">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="Fname" class="col-sm-2 col-form-label">First Name:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="Fname" name="Fname" value="<%= Customer.dataValues.Fname %> ">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="Minit" class="col-sm-2 col-form-label">Minit:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="Minit" name="Minit" value="<%= Customer.dataValues.Minit %> ">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="Lname" class="col-sm-2 col-form-label">Last Name:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="Lname" name="Lname" value="<%= Customer.dataValues.Lname %> ">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="phone" class="col-sm-2 col-form-label">Phone:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="phone" name="phone" value="<%= Customer.dataValues.phone %> ">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="email" class="col-sm-2 col-form-label">E Mail:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="email" name="email" value="<%= Customer.dataValues.email %> ">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="password" class="col-sm-2 col-form-label">Password:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="password" name="password" value="<%= Customer.dataValues.password %> ">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                          <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>