<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body >
  <%- include("../partials/nav2")  %> 
  <div class="container mt-3">
    <div class="row">
        <div class="col-2 hstack gap-3">
          <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action" id="list-companies-list" href="/admin/admin_companies_list"  role="tab" aria-controls="list-companies">Companies List</a>
            <a class="list-group-item list-group-item-action" id="list-bus-list" href="/admin/admin_bus_list" role="tab" aria-controls="list-bus">Bus List</a>
            <a class="list-group-item list-group-item-action" id="list-customer-list" href="/admin/admin_customer_list" role="tab" aria-controls="list-customer">Customer List</a>
            <a class="list-group-item list-group-item-action" id="list-tickets-list" href="/admin/admin_ticket_list" role="tab" aria-controls="list-tickets">Ticket List</a>
            <a class="list-group-item list-group-item-action" id="list-routes-list" href="/admin/admin_routes_list" role="tab" aria-controls="list-routes">Routes List</a>
            <a class="list-group-item list-group-item-action active" id="list-Payment-list" href="/admin/admin_payment_list" role="tab" aria-controls="list-Payment">Payment List</a>            
            <a class="list-group-item list-group-item-action" id="list-Seats-list" href="/admin/admin_seats_list" role="tab" aria-controls="list-Seats">Seats List</a>
            <a class="list-group-item list-group-item-action" id="list-Seats-list" href="/admin/log_display" role="tab" aria-controls="list-Logs">Display Logs</a>
          </div>
        </div>
        <div class="row position-static">
          <div class="col-md-6 z-3 position-absolute top-50 start-50 translate-middle">
            <table class="table table-striped table-bordered table-responsive ">
              <thead class="table-bordered ">
                <tr>
                  <th scope="col">Payment ID</th>
                  <th scope="col">Date</th>
                  <th scope="col">Booking ID</th>
                  <th scope="col">Amount Paid</th>
                  <th scope="col">Customer ID</th>
                </tr>
              </thead>
              <tbody>
               <% Payment.forEach(payment => { %>
                  <tr>
                    <td><%= payment.dataValues.payment_ID %></td>
                    <td><%= payment.dataValues.date %> </td>
                    <td><%= payment.dataValues.booking_id %> </td>
                    <td><%= payment.dataValues.amount_paid %> </td>
                    <td><%= payment.dataValues.customer_id %> </td>
                    <td>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a class="btn btn-sm btn-primary" href="/admin/payment_create/<%= payment.dataValues.payment_ID %> ">Edit</a>  
                    <a class="btn btn-sm btn-danger" href="/admin/payment_delete/<%= payment.dataValues.payment_ID %> ">Delete</a> 
                    <a class="btn btn-sm btn-success" href="/admin/payment_create">Insert</a> 
                    </div>
                    </td>
                  </tr>
               <% }) %>
              </tbody>
            </table>
          </div>
        </div>
        <%- include("../partials/pagination")  %> 
         </div>
      </div>
    </div>
  
</html>