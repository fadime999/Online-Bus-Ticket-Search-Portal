<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>   
    <div id="login" data-bg="yes" style="background-image: url(&quot;https://images.pexels.com/photos/907485/pexels-photo-907485.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2&quot;);  width: 1280px; height: 609px;">
        <div class="container pt-5">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-8">
                    <div id="login-box" class="col-md-12">
                    <!-- Error check -->
                    <% if (typeof message != "undefined") { %>             
                        <div class="alert alert-warning">
                            <%= message %> 
                        </div>
                    <% } %>
                    <h3 class="text-center text-white">MEMBER LOGIN</h3>
                    <form id="login-form" method="post">
                        <div class="row mb-3 mt-5">
                            <label for="email_address" class="col-md-4 col-form-label text-md-right text-white px-5">E-Mail Address:</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" id="email_address" name="email_address">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="password" class="col-md-4 col-form-label text-md-right text-white px-5">Password:</label>
                            <div class="col-sm-6 mt-3">
                                <input type="text" class="form-control" id="password" name="password">
                            </div>
                        </div>
                       
                        <div class="row mb-3">
                            <div class="col-sm-6 offset-sm-4 ">
                              <button type="submit" class="btn btn-primary" style="width:100%;position:relative">Login</button>
                            </div>
                        </div>
                    </form>
                </div>
                </div>
            </div>
        </div>    
    </div>
  
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

</body>
</html>



